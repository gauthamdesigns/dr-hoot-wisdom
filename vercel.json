{
    "version": 2,
    "builds": [
        { "src": "api/*.js", "use": "@vercel/node" },
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "css/*", "use": "@vercel/static" },
        { "src": "js/*", "use": "@vercel/static" },
        { "src": "images/*", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg))", "dest": "/$1" },
        { "src": "/(.*)", "dest": "/index.html" }
    ],
    "crons": [
        {
            "path": "/api/update-advice",
            "schedule": "0 2 * * *"
        }
    ]
} 